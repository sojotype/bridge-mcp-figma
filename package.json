{
  "name": "bridge-mcp-figma",
  "version": "0.0.1",
  "description": "MCP server and plugin for Figma: allows you to work with Figma through the MCP protocol.",
  "main": "code.js",
  "author": "sojotype",
  "repository": {
    "type": "git",
    "url": "https://github.com/sojotype/bridge-mcp-figma"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "lefthook install",
    "dev": "bun run --env-file=.env turbo run dev",
    "dev:plugin": "bun run --env-file=.env turbo run dev --filter=bridge-mcp-figma/plugin",
    "dev:mcp": "bun run --env-file=.env turbo run dev --filter=bridge-mcp-figma/mcp-server",
    "build": "turbo run build",
    "generate:plugin-api-agent": "bun run --cwd packages/api generate:plugin-api-agent"
  },
  "type": "module",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "2.4.4",
    "@types/bun": "latest",
    "@types/node": "24.10.13",
    "@types/react": "19.2.14",
    "@types/react-dom": "19.2.3",
    "concurrently": "9.2.1",
    "fluid-tailwindcss": "1.0.9",
    "lefthook": "2.1.1",
    "lint-staged": "16.2.7",
    "tailwindcss": "4.2.1",
    "turbo": "2.8.10",
    "typescript": "5.9.3",
    "ultracite": "7.2.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "bun x ultracite fix"
    ]
  }
}
